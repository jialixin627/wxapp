<view class="page">
<view>{{host}}</view>
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
      <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="weui-cells">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" maxlength="20" id="id_question" name="question" placeholder="请填写投票标题(2-20个字)" />
                </view>
            </view>
        </view>

        <view class="weui-cells">
            <view class="weui-cell weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" name="subtitle" id="id_subtitle" placeholder="请填写投票内容说明(2-80个字)" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/80</view>
                </view>
            </view>
        </view>
        

        <view class="weui-cells">
            <view class="weui-cell weui-cell_input" wx:for-items="{{optionList}}" wx:key="{{index}}">
                <view class="weui-cell__hd">
                    <image bindtap="delOption" src="{{item.icon}}" class="option-icon" data-index="{{index}}"></image>
                </view>
                <view class="weui-cell__bd"><input bindinput="recordValue" name="choice_set-{{index}}-choice_text" class="weui-input"  data-index="{{index}}" value="{{item.value}}" placeholder="选项{{index + 1}}" /></view>
            </view>
            <view class="weui-cell" bindtap="addOption" wx:if="{{showAddBtn}}" >
                <view class="weui-cell__hd">
                    <image src="/images/common/4.png" class="option-icon"></image>
                </view>
                <view class="weui-cell__bd">添加选项</view>
            </view>
        </view>
        <view class="weui-cells__tips">最多支持15个选项，每个选项不超过40个字</view>

        <view class="weui-cells">
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">投票类型</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindVoteTypeChange" value="{{voteTypeIndex}}" range="{{voteType}}">
                        <view class="weui-select weui-select_in-select-after">{{voteType[voteTypeIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">结束日期</view>
                </view>
                <view class="weui-cell__bd">
                   <picker mode="date" name="deadline_date" value="{{date}}" start="2017-09-01" end="2027-09-01" bindchange="bindDateChange">
                        <view class="weui-select weui-select_in-select-after">{{date}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">结束时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" name="deadline_time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="weui-select weui-select_in-select-after">{{time}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_switch">
                <view class="weui-cell__bd">匿名投票</view>
                <view class="weui-cell__ft">
                    <switch checked />
                </view>
            </view>
        </view>
        <view class="weui-cells__tips">开启后，发布者仍可查看投票人详情</view>
        
        <view class="weui-cells uploader-wrap">
            <view class="uploader-text">添加图片</view>
            <view class="weui-uploader">
                <view class="weui-uploader__bd">
                    <view class="weui-uploader__files" id="uploaderFiles">
                        <block wx:for-items="{{files}}" wx:key="{{index}}">
                            <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                                <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                            </view>
                        </block>
                    </view>
                    <view class="weui-uploader__input-box" wx:if="{{files.length <= 0}}">
                        <view class="weui-uploader__input" bindtap="chooseImage"></view>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-cells__tips">可上传一张和投票主题相关的图片</view>

        <view>
            <input class="hide" name="choice_set-TOTAL_FORMS" value="{{totalForms}}" id="id_choice_set-TOTAL_FORMS" />
            <input class="hide" name="choice_set-INITIAL_FORMS" value="0" id="id_choice_set-INITIAL_FORMS" />
            <input class="hide" name="choice_set-MIN_NUM_FORMS" value="2" id="id_choice_set-MIN_NUM_FORMS" />
            <input class="hide" name="choice_set-MAX_NUM_FORMS" value="1000" id="id_choice_set-MAX_NUM_FORMS" />
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" formType="submit" >确认发布</button>
        </view>
      </form>
    </view>
</view>