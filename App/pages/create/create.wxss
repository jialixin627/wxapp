.option-icon {
    margin-right: 5px;
    vertical-align: middle;
    width:20px;
    height: 20px;
}
.weui-select_in-select-after {
    text-align: right;
}

.uploader-wrap {
    width: 100%;
    overflow: hidden;
}
.uploader-text {
    float: left;
    height: 98px;
    line-height: 98px;
    padding-left: 15px;
    margin-right: 20px;
}
.weui-uploader {
    float: left;
    padding-top: 9px;
}
.hide {
    display: none;
}

.weui-panel {
    margin: 10px;
    background: #FFF;
    border-radius: 4px;
}
.weui-panel:first-child {
    margin: 10px;
}

.user-face {
    border-radius: 50%;
}
.weui-media-box__desc {
    color: #333;
}
.weui-media-box__desc image {
    width: 100%;
    height: 150px;
}